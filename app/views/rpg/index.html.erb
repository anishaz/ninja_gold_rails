<h1>Ninja Gold Game</h1>
<h3>Your Gold: <%= @gold %></h3>
<!-- <h6><a href="/reset">RESET GAME</a></h6> -->
<div class="box">
  <h3>Farm</h3>
  <h4>(earns 10-20 golds)</h4>
  <form action="/process_money" method="post" id="box1">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
    <input type="submit" name="submit" value="Find Gold!">
    <input type="hidden" name="building" value="farm">
  </form>
</div>
<div class="box">
    <h3>Cave</h3>
    <h4>(earns 5-10 golds)</h4>
  <form action="/process_money" method="POST" id="box2">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
    <input type="submit" name="submit" value="Find Gold!">
    <input type="hidden" name="building" value="cave">
  </form>
</div>
<div class="box">
  <h3>House</h3>
  <h4>(earns 2-5 golds)</h4>
  <form action="/process_money" method="POST" id="box3">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
    <input type="submit" name="submit" value="Find Gold!">
    <input type="hidden" name="building" value="house">
  </form>
</div>
<div class="box">
    <h3>Casino</h3>
    <h4>(earns/takes 0-50 golds)</h4>
  <form action="/process_money" method="POST" id="box4">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
    <input type="submit" name="submit" value="Find Gold!">
    <input type="hidden" name="building" value="casino">
  </form>
</div>
<h6><a href="/reset">RESET GAME</a></h6>
<div>
  <ul class="session-messages">
    <% @activities.reverse.each do |a|%>
	   <li style="color:purple;"><%= a %></li>
	  <% end %>
  </ul>
</div>
